@require "~@macrostrat/ui-components/src/shared/colors.styl"

*
  box-sizing border-box

body
  margin 0
  height 100vh
  overflow-y: scroll

html
  overflow: hidden


.subtitle
  color: #888
  font-size: 1.4em
  font-weight bold

h1,h2
  span.subtle
    color: #888

.instructions
  font-style italic
  font-size 0.9em
  padding-top: 0.25em

.login-form, .results-landing-page
  width 40em
  margin 0 auto
  margin-top -50px

.login-form
  span.user-select
    span
      display block
      display block
    .bp3-button-text
      flex-grow 1

div.actions .bp3-button-group
  display block
  margin 0 auto

.bp3-navbar
  background-color: $light-gray3
  z-index 30
  .bp3-navbar-heading a
    text-decoration none
    color: $gray1
  h1
    font-size 1.2em


.main-toaster
  z-index 100
  .error-toast
    position relative
    h4
      margin-top 0
    pre
      background-color #ffeeee
      border 1px solid #ffaaaa
      color #880000
      padding 10px
      border-radius 3px
      max-height 400px
      overflow scroll
      max-width 100%

.image-container
  margin 1em auto
  outline 0.5em solid #ccc
  position relative
  div.overlay
    top 0
    left 0
    position absolute

.bp3-navbar
  display flex
  &>div:first-child
    flex 1
  .bp3-navbar-group.bp3-align-right
    &>*
      margin-left 0.5em

div.rect
  position absolute
  border 2px solid black
  cursor pointer
  &.draggable
    cursor move
  div.handles
    div
      background rgba(0,0,0,0)
      &:hover
        background rgba(0,0,0,0.5)
      position absolute
    .left, .right
      cursor: ew-resize
    .top, .bottom
      cursor: ns-resize
    .top.right, .left.bottom
      cursor: nesw-resize
    .top.left, .right.bottom
      cursor: nwse-resize
  .delete-rect
    right 2px
    top 2px
    position absolute
  div.tag-name
    position absolute
    font-weight 600
    top -16px
    font-size 12px
  div.rect-controls
    z-index 10
    position absolute
    background-color #eee
    border 1px solid #ccc
    border-radius 5px
    min-width: 122px
    &.top
      top -20px
    &.bottom
      bottom -36px
    &>*
      margin 3px

div.notifications
  position fixed
  bottom 0
  left 0
  margin 10px 20px
  div.bp3-toast
    margin-top: 8px
    padding: 2px
  div.bp3-toast:first-child
    margin-top 0

  div.edit-mode
    padding 3px 3px 3px 8px
    width 150px
    display flex
    margin-bottom 5px
    height 36px
    flex-direction row
    align-items center
    &>*
      display block
    .bp3-button
      display flex
    .message
      flex-grow 1
      font-style italic
    .mode
      font-weight bold
      font-size 0.9em
      text-transform uppercase
      color: #444
      padding-right 0.5em
    &.link
      background-color: #ccffaa
    &.add-part
      background-color: #aaddff

svg.annotation-links
  position absolute
  top 0
  left 0
  pointer-events none

.annotation
  z-index 2
  &.locked
    z-index 1
    cursor pointer
    pointer-events none
    &.rect
      cursor pointer

body
  padding 0
  margin 0

div.app-main
  margin-top 0
  min-height: 100vh
  padding-top 50px
  overflow-y scroll
  &.bp3-dark
    background-color $dark-gray3
    img
      filter: invert()
      mix-blend-mode: lighten;
    .bp3-navbar .bp3-navbar-heading a
        text-decoration none
        color: $gray5
